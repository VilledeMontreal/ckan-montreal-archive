{% set facetNames = {
  organization: 'Organizations',
  groups: 'Cat√©gories',
  tags: 'Tags',
  res_format: 'Formats',
  license_id: 'Licenses'
} %}

{% for facetId, value in result.search_facets %}
<section class="mb-6 md:pr-10">
  <h2 class="bg-gray-200 px-4 py-3 border-t border-gray-200 font-bold">{{ __(facetNames[facetId]) }}</h2>
  <ul>
    {% for item in value.items|sort(reverse=true, attribute="count") %}
    <li class="border-t border-gray-200">
      <a href="/search?q={{ facetId }}:{{ item.name }} {{ query.q }}" class="filter-button" aria-label="{{ item.display_name }} ({{ item.count }} results)">
        {{ item.display_name }}
        <span class="filter-button_count">{{ item.count }}</span>
      </a>
    </li>
    {% endfor %}
  </ul>
</section>
{% endfor %}
