<ul class="pt-gutter font-open-sans">
  {% for package in result.results  %}
  <li class="mt-2 border-t border-gray-400 px-5 py-6">
    <div>
      {% if 'organization:' not in query.q %}
        <div class="flex flex-row">
          <div id="org_logo" class="flex items-center h-40 w-1/5 pr-4">
            <img class="inline-block w-full" src="{{urls.siteURL}}/uploads/group/{{ package.organization.image_url }}"/>
          </div>

          <div class="flex flex-col w-4/5">
            <h3 class="text-lg font-bold">
              <a class="text-gray-900 hover:text-primary" href="/{{ package.organization.name or 'dataset' }}/{{ package.name }}">{{ package.title or package.name }}</a>
            </h3>
            <div class="flex flex-col leading-loose text-lg text-gray-ink my-3">
              <div class="w-full">
                {% if package.readmeSnippet %}
                  <p>
                    {{ package.readmeSnippet }}
                  </p>
                {% elif package.readmeHtml %}
                  <p>
                    {{ package.readmeHtml|safe }}
                  </p>
                {% elif package.description %}
                  <div class="markdown-content leading-relaxed">
                    {% if package.description|length > 200 %}
                      <p class="block">
                        {{ package.description|processMarkdown|truncate(170)|safe }}
                      </p>
                    {% else %}
                      <p class="block">
                        {{ package.description|processMarkdown|safe }}
                      </p>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
            <ul class="mt-2">
              {% set formats = [] %}
                {% for resource in package.resources %}
                  {% if resource.format  not in formats %}
                    <span hidden>{{formats.push(resource.format)}}</span>
                  {% endif %}
                {% endfor %}
              {% for format in formats %}
                {%if format %}
                  <li class="inline ">
                    <a href="/{{ package.organization.name or 'dataset' }}/{{ package.name }}" data-format="{{ format }}" class="font-bold text-sm text-primary border border-gray-400 rounded py-1 px-2 mr-1 hover:border-primary">{{ format }}</a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
      {% else %}
        <div>
          <h3 class="text-lg font-bold">
            <a class="text-gray-900 hover:text-primary" href="/{{ package.organization.name or 'dataset' }}/{{ package.name }}">{{ package.title or package.name }}</a>
          </h3>
          <div class="container flex flex-col leading-loose text-lg text-gray-ink my-3">
            <div class="w-full">
              {% if package.readmeSnippet %}
                <p>
                  {{ package.readmeSnippet }}
                </p>
              {% elif package.readmeHtml %}
                <p>
                  {{ package.readmeHtml|safe }}
                </p>
              {% elif package.description %}
                <div class="markdown-content leading-relaxed">
                  {% if package.description|length > 200 %}
                    {{ package.description|processMarkdown|truncate(200)|safe }}
                  {% else %}
                    {{ package.description|processMarkdown|safe }}
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
        <ul class="mt-2">
          {% set formats = [] %}
            {% for resource in package.resources %}
              {% if resource.format  not in formats %}
                <span hidden>{{formats.push(resource.format)}}</span>
              {% endif %}
            {% endfor %}
          {% for format in formats %}
            {%if format %}
              <li class="inline ">
                <a href="/{{ package.organization.name or 'dataset' }}/{{ package.name }}" data-format="{{ format }}" class="font-bold text-sm text-primary border border-gray-400 rounded py-1 px-2 mr-1 hover:border-primary">{{ format }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>        
      {% endif %}
    </div>   
  </li>
  {% endfor %}
</ul>

